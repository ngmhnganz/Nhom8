<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtDate_lyComingOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorText"
            android:gravity="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_lyComingOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_background"
                android:background="@drawable/round_corner_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtAddress_lyComingOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfpro_regular"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDes_lyComingOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="20dp"

                    android:fontFamily="@font/sfpro_medium"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPrice_lyComingOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Giá"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/sfpro_bold"

                    android:layout_marginHorizontal="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btnXemChiTiet_lyComingOrder"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Xem chi tiết"

                android:textColor="@color/colorPrimary"
                android:background="@drawable/stroke_btn"

                android:layout_margin="10dp"/>

            <android.widget.Button
                android:id="@+id/btnTheoDoiDon_lyComingOrder"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"

                android:textSize="12sp"

                android:text="Theo dõi đơn"

                android:textColor="@color/colorPrimary"
                android:background="@drawable/stroke_btn"

                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>