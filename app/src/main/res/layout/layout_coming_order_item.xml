<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"

    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSatus_iComingOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:gravity="start"/>

            <TextView
                android:id="@+id/txtDate_iComingOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_weight="1"
                android:textColor="@color/colorText"
                android:gravity="end"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_iComingOrder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:background="@drawable/round_corner_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtAddress_iComingOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"

                    android:fontFamily="@font/sfpro_regular"
                    android:text="TextView"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp">
                    <TextView
                        android:id="@+id/txtPrice_iComingOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Giá"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/sfpro_bold" />
                    <TextView
                        android:id="@+id/txtAmount_iComingOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Giá"
                        android:textColor="@color/colorSubText"
                        android:fontFamily="@font/sfpro_regular" />
                    <TextView
                        android:id="@+id/txtPayment_iComingOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Giá"
                        android:textColor="@color/colorSubText"
                        android:fontFamily="@font/sfpro_regular" />

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/btnCancel"
                    style="@style/button_stroke_default"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:layout_gravity="end"
                    android:fontFamily="@font/sfpro_medium"
                    android:textSize="14sp"

                    android:text="Hủy đơn"
                    android:textColor="@drawable/button_stroke_text_color"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>