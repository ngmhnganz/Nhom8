<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cvitem_allproducts"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"

    android:outlineAmbientShadowColor="@color/colorShadow"
    android:outlineSpotShadowColor="@color/colorShadow"

    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">


        <ImageView
            android:id="@+id/imvHinh_allproducts"

            android:layout_width="match_parent"
            android:layout_height="130dp"

            android:scaleType="centerInside"

            app:srcCompat="@drawable/botcacao"
            android:background="@drawable/round_corner_background_image"/>


        <TextView
            android:id="@+id/txtProductName_allproducts"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="TextView"

            android:textColor="@color/colorText"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="16sp"

            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"

            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txtProductPrice_allproducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gilroy_bold"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>