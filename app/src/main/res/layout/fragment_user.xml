<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_main"

        android:orientation="vertical"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/imv_fmuser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/default_ava"/>

        <TextView
            android:id="@+id/txtUserName_fmuser"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Bạn chưa đăng nhập"
            android:textAllCaps="true"
            android:fontFamily="@font/sfpro_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txtUserPoint_fmuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_point_white"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/colorSecondBackground"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:outlineSpotShadowColor="@color/colorSecondBackgroundShadow"
                android:outlineAmbientShadowColor="@color/colorSecondBackgroundShadow"

                android:background="@drawable/round_corner_image"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:id="@+id/llUserInfo_fmuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_info" />

                    <TextView
                        android:paddingLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingVertical="5dp"
                        android:text="Thông tin khách hàng"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_right_arrow_24" />
                    </RelativeLayout>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSub"
                    android:layout_marginLeft="45dp"/>

                <LinearLayout
                    android:id="@+id/llPoint_fmuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_point_dark" />

                    <TextView
                        android:paddingLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingVertical="5dp"
                        android:text="Lịch sử điểm tích lũy"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_right_arrow_24" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:outlineSpotShadowColor="@color/colorSecondBackgroundShadow"
                android:outlineAmbientShadowColor="@color/colorSecondBackgroundShadow"
                android:background="@drawable/round_corner_image"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:id="@+id/llChinhSach_fmuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chinhsach" />

                    <TextView
                        android:paddingLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingVertical="5dp"

                        android:text="Chính sách"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_right_arrow_24" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSub"
                    android:layout_marginLeft="45dp"/>

                <LinearLayout
                    android:id="@+id/llSupport_fmuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_support" />

                    <TextView
                        android:paddingLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingVertical="5dp"

                        android:text="Trung tâm hỗ trợ"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_right_arrow_24" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSub"
                    android:layout_marginLeft="45dp"/>

                <LinearLayout
                    android:id="@+id/llSetting_fmuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_setting" />

                    <TextView
                        android:paddingLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingVertical="5dp"

                        android:text="Cài đặt"
                        android:textColor="@color/colorText"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_right_arrow_24" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>



            <Button
                style="@style/button_default"
                android:id="@+id/btnLogOut_fmuser"
                android:layout_marginVertical="40dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Đăng xuất"
                android:drawableRight="@drawable/ic_logout"/>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>