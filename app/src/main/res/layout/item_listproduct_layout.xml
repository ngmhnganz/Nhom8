<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imvbgProduct_listProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_listproduct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/imv_product_listProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/imvbgProduct_listProduct"
        app:layout_constraintEnd_toEndOf="@+id/imvbgProduct_listProduct"
        app:layout_constraintStart_toStartOf="@+id/imvbgProduct_listProduct"
        app:layout_constraintTop_toTopOf="@+id/imvbgProduct_listProduct"
        android:src="@drawable/ic_square_add"/>

    <TextView
        android:id="@+id/txtproductName_listProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tên nguyên liệu"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/imvbgProduct_listProduct"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/txtLike_listProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="500 anh em đã thích"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtProductPrice_listProduct"
        app:layout_constraintLeft_toRightOf="@+id/imvbgProduct_listProduct"
        app:layout_constraintTop_toBottomOf="@+id/txtproductName_listProduct"
        app:layout_constraintVertical_bias="0.708"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/txtProductPrice_listProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="24000 đ"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imvbgProduct_listProduct"
        android:textColor="#333333"/>

    <ImageView
        android:id="@+id/imvAdd_listProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_square_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtProductPrice_listProduct"
        app:layout_constraintVertical_bias="0.875" />

</androidx.constraintlayout.widget.ConstraintLayout>