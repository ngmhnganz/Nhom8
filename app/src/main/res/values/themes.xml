<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nhom8" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSub</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorDarkPrimary</item>
        <item name="colorSecondaryVariant">@color/colorSub</item>
        <item name="colorOnSecondary">@color/colorText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottomNavigationText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sfpro_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_stroke_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@drawable/button_stroke_text_color</item>
        <item name="android:background">@drawable/button_stroke_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="btn_increase" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_increase</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="btn_decrease" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_decrease</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="UserInfoTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/edt_selector</item>
    </style>

    <style name="UserInfoTextInputLayoutStyle.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edt_selector</item>
    </style>

    <style name="available_chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/available_chip_selector</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

    <style name="unavailable_chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/unavailable_chip_selector</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

    <style name="input_chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/available_chip_selector</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

    <style name="btn_san_pham" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_san_pham</item>
    </style>

    <style name="btn_cong_thuc" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_cong_thuc</item>
    </style>

    <style name="btn_goi_y" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_goi_y</item>
    </style>

    <style name="sfpro_medium_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfpro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <style name="sfpro_bold_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfpro_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubText</item>
    </style>

    <style name="step_title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSub</item>
    </style>

    <style name="step_content" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfpro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubText</item>
    </style>
</resources>